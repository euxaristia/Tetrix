// Minimal SDL3 events header - forward declarations only
// No copyright - this is a minimal stub for Swift interop

#ifndef SDL_events_h_
#define SDL_events_h_

#include <SDL3/SDL_stdinc.h>
#include <SDL3/SDL_keyboard.h>
#include <SDL3/SDL_scancode.h>
#include <SDL3/SDL_gamepad.h>
#include <SDL3/SDL_joystick.h>
#include <SDL3/SDL_video.h>
#include <SDL3/SDL_begin_code.h>

#ifdef __cplusplus
extern "C" {
#endif

// Event type enum (minimal - only what's needed)
typedef enum {
    SDL_EVENT_QUIT = 0x100,
    SDL_EVENT_KEY_DOWN = 0x300,
    SDL_EVENT_KEY_UP = 0x301,
    SDL_EVENT_JOYSTICK_AXIS_MOTION = 0x600,
    SDL_EVENT_GAMEPAD_AXIS_MOTION = 0x650,
    SDL_EVENT_GAMEPAD_BUTTON_DOWN = 0x652,
    SDL_EVENT_GAMEPAD_BUTTON_UP = 0x653,
    SDL_EVENT_GAMEPAD_ADDED = 0x654,
    SDL_EVENT_GAMEPAD_REMOVED = 0x651,
    SDL_EVENT_WINDOW_FOCUS_LOST = 0x203,
    SDL_EVENT_WINDOW_FOCUS_GAINED = 0x202
} SDL_EventType;

// Forward declarations for event structures
typedef struct SDL_CommonEvent SDL_CommonEvent;
typedef struct SDL_KeyboardEvent SDL_KeyboardEvent;
typedef struct SDL_GamepadButtonEvent SDL_GamepadButtonEvent;
typedef struct SDL_GamepadAxisEvent SDL_GamepadAxisEvent;
typedef struct SDL_GamepadDeviceEvent SDL_GamepadDeviceEvent;

// Keyboard event structure
struct SDL_KeyboardEvent {
    Uint32 type;
    Uint32 reserved;
    Uint64 timestamp;
    Uint32 windowID;
    Uint32 which;
    SDL_Scancode scancode;
    Sint32 key;
    Uint16 mod;
    Uint16 raw;
    bool down;
    bool repeat;
};

// Gamepad button event structure
struct SDL_GamepadButtonEvent {
    Uint32 type;
    Uint32 reserved;
    Uint64 timestamp;
    Uint32 which;
    Uint8 button;
    bool down;
    Uint8 padding1;
    Uint8 padding2;
};

// Gamepad axis event structure
struct SDL_GamepadAxisEvent {
    Uint32 type;
    Uint32 reserved;
    Uint64 timestamp;
    Uint32 which;
    Uint8 axis;
    Uint8 padding1;
    Uint8 padding2;
    Uint8 padding3;
    Sint16 value;
    Uint16 padding4;
};

// Gamepad device event structure
struct SDL_GamepadDeviceEvent {
    Uint32 type;
    Uint32 reserved;
    Uint64 timestamp;
    Uint32 which;
};

// SDL_Event union - minimal version with only needed members
typedef union SDL_Event {
    Uint32 type;
    SDL_KeyboardEvent key;
    SDL_GamepadButtonEvent gbutton;
    SDL_GamepadAxisEvent gaxis;
    SDL_GamepadDeviceEvent gdevice;
} SDL_Event;

// Function declarations
extern SDL_DECLSPEC void SDLCALL SDL_PumpEvents(void);
extern SDL_DECLSPEC bool SDLCALL SDL_PollEvent(SDL_Event *event);
extern SDL_DECLSPEC void SDLCALL SDL_FlushEvents(Uint32 minType, Uint32 maxType);

#ifdef __cplusplus
}
#endif

#include <SDL3/SDL_close_code.h>

#endif /* SDL_events_h_ */
