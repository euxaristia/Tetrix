{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Tetrix",
            // Windows path (on Linux, change to: "${workspaceFolder}/.build/debug/Tetrix")
            "program": "${workspaceFolder}/.build/x86_64-unknown-windows-msvc/debug/Tetrix.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "initCommands": [],
            "sourceLanguages": ["swift", "c", "cpp"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release Tetrix",
            // Windows path (on Linux, change to: "${workspaceFolder}/.build/release/Tetrix")
