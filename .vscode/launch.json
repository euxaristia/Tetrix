{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Tetrix",
            // Windows path: includes architecture subdirectory and .exe extension
            // Linux/macOS: change to "${workspaceFolder}/.build/debug/Tetrix"
            "program": "${workspaceFolder}/.build/x86_64-unknown-windows-msvc/debug/Tetrix.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "showDisplayString": false,
            "initCommands": ["settings set target.process.stop-on-sharedlibrary-events false"],
            "terminal": null,
            "sourceLanguages": [
                "swift",
                "c",
                "cpp"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release Tetrix",
            // Windows path: includes architecture subdirectory and .exe extension
            // Linux/macOS: change to "${workspaceFolder}/.build/release/Tetrix"
            "program": "${workspaceFolder}/.build/x86_64-unknown-windows-msvc/release/Tetrix.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "showDisplayString": false,
            "initCommands": ["settings set target.process.stop-on-sharedlibrary-events false"],
            "terminal": null,
            "sourceLanguages": [
                "swift",
                "c",
                "cpp"
            ]
        }
    ]
}
