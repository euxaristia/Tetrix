{
    // Platform-specific tool paths
    // Windows paths (update these on Linux):
    //   Linux: "/usr/bin/lldb" -> keep as-is on Linux
    //   Linux: "LD_LIBRARY_PATH": "/usr/lib/swift/lib/swift/linux:/usr/lib:${env:LD_LIBRARY_PATH}" -> keep as-is on Linux
    "lldb.executable": "C:\\Users\\euxaristia\\AppData\\Local\\Programs\\Swift\\Toolchains\\6.3.0+Asserts\\usr\\bin\\lldb.exe",
    "lldb.adapterEnv": {
        // LD_LIBRARY_PATH is Linux-only, removed for Windows
    },
    
    // Performance optimizations for Cursor/VSCode
    "files.watcherExclude": {
        "**/.build/**": true,
        "**/.swiftpm/**": true,
        "**/node_modules/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/build/**": true,
        "**/*.o": true,
        "**/*.a": true,
        "**/*.so": true,
        "**/*.dylib": true,
        "**/*.dll": true,
        "**/*.lib": true,
        "**/.idea/**": true
    },
    "files.exclude": {
        "**/.build": true,
        "**/.swiftpm": true,
        "**/.idea": true
    },
    "search.exclude": {
        "**/.build": true,
        "**/.swiftpm": true,
        "**/node_modules": true,
        "**/*.dll": true,
        "**/*.lib": true,
        "**/*.exp": true,
        "**/*.def": true
    },
    // Swift toolchain paths - Windows (update on Linux to use "/usr/bin/swift", "/usr/lib/swift")
    "swift.swiftPath": "C:\\Users\\euxaristia\\AppData\\Local\\Programs\\Swift\\Toolchains\\6.3.0+Asserts\\usr\\bin\\swift.exe",
    "swift.toolchainPath": "C:\\Users\\euxaristia\\AppData\\Local\\Programs\\Swift\\Toolchains\\6.3.0+Asserts",
    // sourcekit-lsp settings - Windows paths (update on Linux to use "/usr/bin/sourcekit-lsp")
    "swift.sourcekit-lsp.serverPath": "C:\\Users\\euxaristia\\AppData\\Local\\Programs\\Swift\\Toolchains\\6.3.0+Asserts\\usr\\bin\\sourcekit-lsp.exe",
    "sourcekit-lsp.serverPath": "C:\\Users\\euxaristia\\AppData\\Local\\Programs\\Swift\\Toolchains\\6.3.0+Asserts\\usr\\bin\\sourcekit-lsp.exe",
    "sourcekit-lsp.toolchainPath": "C:\\Users\\euxaristia\\AppData\\Local\\Programs\\Swift\\Toolchains\\6.3.0+Asserts",
    // Suppress notifications/warnings (debugging works, so toolchain is fine)
    "swift.showNotifications": false,
    "swift.diagnostics.enable": false,
    "sourcekit-lsp.serverArguments": ["--log-level", "error"],
    
    // Editor performance - disabled to reduce keyboard lag
    "editor.semanticHighlighting.enabled": false,
    "editor.inlineSuggest.enabled": false,
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    "editor.suggestOnTriggerCharacters": false,
    "editor.parameterHints.enabled": false,
    "editor.hover.enabled": false,
    
    // Disable unnecessary features that can cause lag
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {},
    
    // File watching optimizations
    "files.watcherInclude": [
        "**/*.swift",
        "**/*.h",
        "**/*.c",
        "**/Package.swift"
    ],
    
    // Reduce auto-save frequency
    "files.autoSave": "off",
    
    // Git settings - auto-refresh enabled for git panel updates
    "git.autoRefresh": true,
    "git.enabled": true,
    
    // TypeScript/JavaScript (if not using, disable)
    "typescript.disableAutomaticTypeAcquisition": true,
    "javascript.disableAutomaticTypeAcquisition": true,
    "typescript.suggest.autoImports": false,
    "javascript.suggest.autoImports": false,
    
    // Additional performance optimizations
    "problems.showCurrentInStatus": false,
    "editor.bracketPairColorization.enabled": false
}
