{
    "lldb.executable": "/usr/bin/lldb",
    "lldb.library": "/usr/lib/liblldb.so",
    "lldb.adapterEnv": {
        "LD_LIBRARY_PATH": "/usr/lib/swift/lib/swift/linux:/usr/lib:${env:LD_LIBRARY_PATH}"
    },
    "lldb.launch.expressions": "native",
    
    // Performance optimizations for Cursor/VSCode
    "files.watcherExclude": {
        "**/.build/**": true,
        "**/.swiftpm/**": true,
        "**/node_modules/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/build/**": true,
        "**/*.o": true,
        "**/*.a": true,
        "**/*.so": true,
        "**/*.dylib": true,
        "**/*.dll": true,
        "**/*.lib": true,
        "**/.idea/**": true
    },
    "files.exclude": {
        "**/.build": true,
        "**/.swiftpm": true,
        "**/.idea": true
    },
    "search.exclude": {
        "**/.build": true,
        "**/.swiftpm": true,
        "**/node_modules": true,
        "**/*.dll": true,
        "**/*.lib": true,
        "**/*.exp": true,
        "**/*.def": true
    },
    "swift.swiftPath": "/usr/bin/swift",
    "swift.toolchainPath": "/usr/lib/swift",
    // sourcekit-lsp settings
    "swift.sourcekit-lsp.serverPath": "/usr/bin/sourcekit-lsp",
    "sourcekit-lsp.serverPath": "/usr/bin/sourcekit-lsp",
    "sourcekit-lsp.toolchainPath": "/usr/lib/swift",
    // Suppress notifications/warnings (debugging works, so toolchain is fine)
    "swift.showNotifications": false,
    
    // Editor performance
    "editor.semanticHighlighting.enabled": true,
    "editor.inlineSuggest.enabled": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    
    // Disable unnecessary features that can cause lag
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {},
    
    // File watching optimizations
    "files.watcherInclude": [
        "**/*.swift",
        "**/*.h",
        "**/*.c",
        "**/Package.swift"
    ],
    
    // Reduce auto-save frequency
    "files.autoSave": "off",
    
    // Disable Git auto-refresh if not needed
    "git.autoRefresh": false,
    "git.enabled": true,
    "git.autorefresh": false,
    
    // TypeScript/JavaScript (if not using, disable)
    "typescript.disableAutomaticTypeAcquisition": true,
    "javascript.disableAutomaticTypeAcquisition": true,
    "typescript.suggest.autoImports": false,
    "javascript.suggest.autoImports": false,
    
    // Additional performance optimizations
    "problems.showCurrentInStatus": false,
    "editor.bracketPairColorization.enabled": false
}
